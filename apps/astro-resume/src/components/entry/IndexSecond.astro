---
import ContentHolder from '@/layouts/sublayouts/ContentHolder.astro';
import UpperCaseLink from '@/utils/UpperCaseLink.astro';
import GamificBackground from './GamificBackground';
import { twMerge } from 'tailwind-merge';
const colorSets = [
    twMerge('from-red-700/70 to-red-500/50'),
    twMerge('bg-red-200/50'),
    twMerge('to-red-700/50 from-red-500/30')
]
---
<ContentHolder
    anchorId='second'
    classNames={colorSets}
    before="#first"
    after="#third"
    bgColor="rgb(206, 157, 199)"
    bgImage="images/mountain.jpg"
>
<GamificBackground slot="image-area" client:only="react"/>
<span class="text-5xl">

    And,
</span>
<span>

    I like doing something 
</span>
<UpperCaseLink href="/apps">
    interesting.
</UpperCaseLink>

<img slot="image-area" alt="profile" src="/images/app-screenshots/svg-designer.png" class="flex-shrink rounded-lg max-w-[400px] max-h-[400px] w-full lg:h-auto h-auto px-4 aspect-1 object-contain" />
</ContentHolder>
