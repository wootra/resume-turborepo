--- 
import {twMerge} from 'tailwind-merge';
interface Props {
	className?: string;
    href: string;
    "aria-label"?: string;
}

const { className, ["aria-label"]:ariaLabel, href } = Astro.props;
---
<a href={href} class={twMerge("px-2 flex-nowrap whitespace-nowrap hover:scale-125 transition-all", className)} aria-label={ariaLabel}><slot/></a>
	