---
import { Icon } from 'astro-icon/components';

interface Props {
    href: string;
    label?: string;
}
const {href, label="TOP"} = Astro.props;

---
<div class="absolute flex flex-row justify-end items-center top-0 right-4 h-8 z-40">
    <a href={href} class="h-8 flex justify-center items-center text-white text-xs gap-2 z-40">
        {label}<Icon name="arrow-down" class="w-4 h-4 rotate-180"/>
    </a>
</div>