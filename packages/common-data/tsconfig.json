{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Common Lib",
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "lib": ["ES2015", "DOM"],
        "module": "ESNext",
        "target": "es6",
        "paths": {
            "@/*": ["./data/*"]
        },
        "rootDir": "."
    },
    "include": ["./data/**/*"],
    "exclude": ["dist", "build", "node_modules"]
}
