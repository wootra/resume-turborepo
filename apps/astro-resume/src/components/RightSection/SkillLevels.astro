---
import {Title, ExpandPanel} from 'solid-ui';
import {RightContents} from 'common-data';

const {skillLevels} = RightContents;

---
<div>
    <Title color="yellow">Skill Levels</Title>
    {
        <div class="flex flex-col gap-2 text-gray-light">
        {
            Object.keys(skillLevels).map((category, idx)=>(
            <ExpandPanel 
                title={category} 
                client:only="solid-js" 
                class="bg-cyan-950 rounded-md px-2 text-sm" 
                group="skill-level" isInitiallyExpanded={idx===0}
                data-tooltip="max skill level is 游릭游릭游릭游릭游릭"
            >
                <ul class="flex flex-col gap-2 text-gray-light py-2">{skillLevels[category].map(({skillName, levelNo})=>(
                    <li class="flex flex-row pl-2 text-xs leading-5 bg-slate-700 rounded-md">
                        <span class="grow text-left text-slate-300">{skillName}</span>
                        <span class="text-right my-auto">{(new Array(levelNo).fill('游릭').join(''))}</span>
                    </li>
                ))}</ul>
            </ExpandPanel>
            ))
        }
        </div>
    }
</div>