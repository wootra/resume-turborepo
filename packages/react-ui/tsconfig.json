{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "React Library",
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "jsx": "preserve",
        "outDir": "../../dist/out-tsc",
        "jsxImportSource": "react",
        "lib": ["ES2015", "DOM"],
        "module": "ESNext",
        "target": "es6",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["."],
    "exclude": ["dist", "build", "node_modules"]
}
