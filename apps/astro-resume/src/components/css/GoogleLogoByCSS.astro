---
import type { CSSProperty } from 'astro/types'

type Props = {
    style: string;
}
const {style} = Astro.props;

---
<div class="circle-mask-out" style={style}>
    <div class="rotate-center">
        <div class="translate-center">
            <div class="red"/>
            <div class="yellow"/>
            <div class="blue"/>
            <div class="green"/>
            <div class="white-gap"/>
        </div>
        <div class="white-center"/>
        <div class="blue-bar" />
    </div>
</div>
<style>
    

    .circle-mask-out {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background-color: white;
        overflow: hidden;
        --google-blue:  rgb(46, 100, 226);
    }
    
    .circle-mask-out {
        --animation-time: 2s;
        .red {
            animation: google-open-red var(--animation-time) ease-in-out infinite;
        }

        .green {
            animation: google-open-green var(--animation-time) ease-in-out infinite;
        }

        .yellow {
            animation: google-open-yellow var(--animation-time) ease-in-out infinite;
        }
    }
   
    .rotate-center {
        position: absolute;
        width: 100%;
        height: 100%;
        transform: translate(-50%, -50%) rotate(-45deg);
        left: 50%;
        top: 50%;
    }
    .translate-center {
        position: absolute;
        width: 100%;
        height: 100%;
        transform: translate(40%, 50%); 
    }

    .white-center {
        position: absolute;
        width: 50%;
        height: 50%;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        border-radius: 50%;
    }

    .red, .yellow, .green, .blue, .blue-bar {
        position:absolute;
        width: 100%;
        height: 100%;
        left: -50%;
        top: -50%;
    }

    .red::after, .yellow::after, .green::after, .blue::after, .white-gap::after, .blue-bar::after {
        content: '';
        position:absolute;
        left: 50%;
        top: 50%;
        width: 100%;
        height: 100%;
    }

    .red::after {
        background-color: red;
    }

    .yellow::after {
        background-color: rgb(255, 187, 0);
    }

    .green::after {
        background-color: rgb(13, 137, 13);
    }

    .blue, .blue-bar {
        transform: rotate(45deg);
    }

    .blue::after, .blue-bar::after {
        background-color: var(--google-blue);
    }
    
    .blue-bar {
        left: 50%;
        top: 50%;
        height: 25%;
        width: 100%;
    }
    .blue-bar::after {
        transform: translate(-45%, 50%);
    }

    @keyframes google-open-red {
        0%, 100% {
            transform: rotate(45deg);
        }

        50% {
            transform: rotate(270deg);
        }
    }

    @keyframes google-open-yellow {
        0%, 100% {
            transform: rotate(45deg);
        }

        50% {
            transform: rotate(180deg);
        }

    }

    @keyframes google-open-green {
        0%, 100% {
            transform: rotate(45deg);
        }

        50% {
            transform: rotate(90deg);
        }

    }
</style>