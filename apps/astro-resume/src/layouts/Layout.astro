---
import 'resume-css/variables/variables.css';// root
import { FrameworkNoticeBanner } from 'solid-ui';
const sourceLinks={
	"source repo": "https://github.com/wootra/resume-turborepo/tree/main/apps/astro-resume"
}
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Songhyeon Jun's resume in astro">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&amp;family=Roboto+Slab&amp;display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<FrameworkNoticeBanner description="This page is written in Astro.js, Solid.js, Svelte.js, CSS3, and Tailwind" currentLabel='Astro JS(Svelte.js, Solid.js)' sourceLinks={sourceLinks} client:load />
		<main class="main-page">
			<div class="grid-container">
				<slot />
			</div>
		</main>
	</body>
</html>
<style is:global>
	:root {
		
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}

	body {
		margin: 0;
    	min-width: 381px;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	.main-page {
		display: grid;
		grid-template-columns: 1fr 700px 1fr;
	}

	.grid-container {
		grid-column: 2/3;
		display: grid;
		grid-template-columns: auto;
		grid-template-rows: minmax(12rem,auto) auto auto;
		grid-template-areas:
		"top"
		"left" 
		"right";
	}

	@media (min-width: 768px) {
		.main-page {
			display: grid;
			grid-template-columns: 1fr minmax(400px 700px) 1fr;
		}
		
		.grid-container {
			grid-template-columns: 400px auto;
			grid-template-rows: minmax(12rem,auto) auto;
			grid-template-areas:
			"top top"
			"left right";
		}
	}

	#top {
		grid-area: top;
	}

	#left {
		grid-area: left;
	}

	#right {
		grid-area: right;
	}

</style>
