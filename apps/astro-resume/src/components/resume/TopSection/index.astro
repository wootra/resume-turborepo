---
import ProfileImage from "./ProfileImage.astro";
import ProfileInfo from "./ProfileInfo.astro";
export interface Props {
	usePdf?: boolean;
}

const { usePdf=false } = Astro.props;
---
<div class="flex flex-row">
    {!usePdf && <div id="profile-picture" class="relative h-full group overflow-y-clip overflow-hidden">
        <ProfileImage />
    </div>}
    <div id="top-content" data-pdf={usePdf ? "true": ""} class="w-full flex-grow bg-back-blue flex flex-col py-4 px-5 justify-start items-end">
        <ProfileInfo usePdf={usePdf} />
    </div>
</div>

<style>
    #profile-picture {
        display: none;
        width: 0;
    }
    #top-content:not([data-pdf="true"]) {
        border-radius: 1rem 1rem 0 0;
    }
    @media (min-width: 701px) {
        #profile-picture {
            display: block;
            width: 16rem;
            height: 12rem;
            flex: 0 0 16rem;
            border-radius: 6rem 0 0 0; 
        }

        #top-content:not([data-pdf="true"]) {
            border-radius: 0 1rem 0 0;
        }
	}
</style>