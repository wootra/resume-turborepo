{
  "$schema": "https://v2-8-10.turborepo.dev/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".vercel/output/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:resume": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".vercel/output/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
